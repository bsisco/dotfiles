# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# Source local for stuff that you don't want in the public repo.
if [[ -a ~/.localrc ]]
then
    source ~/.localrc
fi

# shortcut to this dotfiles path is $BASH
export BASH=$HOME/.dotfiles

for config_file ($BASH/**/*.bash) source $config_file

for config_file ($BASH/**/completion.sh) source $config_file
# User specific aliases and functions
set -o vi
